{
  "name": "express-typescript-boilerplate",
  "version": "1.2.0",
  "description": "Template to be used for an expressjs application based in typescript",
  "main": "server.js",
  "type": "commonjs",
  "author": "Jorge Mart√≠n",
  "license": "ISC",
  "scripts": {
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"tsc -w\" \"nodemon dist/server.js\"",
    "dev-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"tsc -w\" \"nodemon --inspect dist/server.js\"",
    "start": "node dist/server.js",
    "build": "tsc -p tsconfig.build.json",
    "prod": "npm run build && npm run start",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "deploy": "",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/*.ts",
    "lint-fix": "yarn lint --fix",
    "format": "prettier --ignore-path .prettierignore --write \"**/*.+(ts|js)\"",
    "clean": "rm -rf node_modules coverage dist",
    "clean:build": "rm -rf dist",
    "prepare": "husky install"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "http-errors": "^2.0.0",
    "husky": "^8.0.3",
    "morgan": "^1.10.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "4.17.17",
    "@types/http-errors": "2.0.1",
    "@types/morgan": "1.9.4",
    "@types/node": "20.5.1",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "6.4.0",
    "@vitest/coverage-v8": "^0.34.2",
    "chalk": "4.1.2",
    "concurrently": "8.2.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard-with-typescript": "^38.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unicorn": "^48.0.1",
    "express-jsdoc-swagger": "^1.8.0",
    "lint-staged": "^14.0.1",
    "nodemon": "3.0.1",
    "prettier": "^3.0.2",
    "supertest": "6.3.3",
    "typescript": "5.1.6",
    "vitest": "^0.34.2"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix --cache-location ./node_modules/.cache/.eslintcache",
    "*.{js,json,ts}": "prettier --write"
  }
}
