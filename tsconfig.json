{
  "compilerOptions": {
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "types": ["node", "vitest/globals"],
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
